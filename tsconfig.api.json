{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2023"
        ],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "@vercel/node"
        ]
    },
    "include": [
        "api/**/*",
        "lib/**/*"
    ]
}